{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/*"],
      "@mobile/*": ["../mobile/*"],
      "@data/*": ["../../packages/data/*"],
      "@features/*": ["../../packages/features/*"],
      "@ui/*": ["../../packages/ui/*"],
      "@shared/*": ["../../packages/*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
