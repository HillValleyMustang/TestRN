{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@app/*": ["./apps/web/src/*"],
      "@mobile/*": ["./apps/mobile/*"],
      "@data/*": ["./packages/data/*"],
      "@features/*": ["./packages/features/*"],
      "@ui/*": ["./packages/ui/*"],
      "@shared/*": ["./packages/*"]
    }
  },
  "exclude": ["node_modules"]
}
