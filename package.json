{
  "name": "my-fitness-trainer-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "npm --prefix apps/web run dev",
    "web:build": "npm --prefix apps/web run build",
    "web:start": "npm --prefix apps/web run start",
    "web:lint": "npm --prefix apps/web run lint",
    "mobile:start": "npm --prefix apps/mobile start",
    "mobile:ios": "npm --prefix apps/mobile run ios",
    "mobile:android": "npm --prefix apps/mobile run android",
    "dev": "npm run web:dev",
    "build": "npm run web:build",
    "start": "npm run web:start",
    "lint": "npm run web:lint",
    "lint:mobile": "npm --prefix apps/mobile run lint",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:all": "npm run web:lint && npm run lint:mobile"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@react-native-community/netinfo": "^11.3.3"
  }
}
